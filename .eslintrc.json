{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": 0,
    "react/require-default-props": 0,
    "react/button-has-type": 0,
    "react/prop-types": 1,
    "react/jsx-props-no-spreading": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 1,
    "prefer-destructuring": 1,
    "arrow-parens": 0,
    "no-shadow": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "react/sort-comp": [
      1,
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ]
  }
}
